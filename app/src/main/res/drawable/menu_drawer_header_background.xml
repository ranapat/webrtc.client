<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/ak_white" />
        </shape>
    </item>

    <item android:top="@dimen/drawer_menu_header_line_offset" android:right="@dimen/drawer_menu_line_horizontal_padding" android:left="@dimen/drawer_menu_line_horizontal_padding">
        <shape android:shape="line">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/ak_light_gray" />
        </shape>
    </item>

</layer-list>